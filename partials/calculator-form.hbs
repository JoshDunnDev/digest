<form id="{{formId}}">
  <div class="cal-input-container">
    <label class="cal-input-label" for="{{calculatorType}}-symbol">Symbol
      <span class="cal-tooltip">&#9432;
        <span class="cal-tooltiptext">Ticker symbol. (optional)</span>
      </span></label>
    <input type="text" id="{{calculatorType}}-symbol" placeholder="NVDA" />
  </div>
  <div class="cal-input-container">
    <label class="cal-input-label" for="{{calculatorType}}-entry">Entry ($)
      <span class="cal-required">*</span>
      <span class="cal-tooltip">&#9432;
        <span class="cal-tooltiptext">The price at which you plan to enter the
          market at.</span>
      </span></label>
    <input
      type="number"
      id="{{calculatorType}}-entry"
      step="0.01"
      placeholder="2.15"
      required
    />
  </div>

  {{#match calculatorType "sl"}}
    <div class="cal-input-container">
      <label class="cal-input-label" for="{{calculatorType}}-shares">Shares
        <span class="cal-required">*</span>
        <span class="cal-tooltip">&#9432;
          <span class="cal-tooltiptext">The amount of shares you plan to enter
            the market with.</span>
        </span>
      </label>
      <input
        type="number"
        id="{{calculatorType}}-shares"
        step="any"
        placeholder="400"
        required
      />
    </div>
  {{/match}}

  {{#match calculatorType "ps"}}
    <div class="cal-input-container">
      <label class="cal-input-label" for="{{calculatorType}}-stopLoss">Stop Loss
        ($)
        <span class="cal-required">*</span>
        <span class="cal-tooltip">&#9432;
          <span class="cal-tooltiptext">The price level at which you will set
            your stop loss.</span>
        </span></label>
      <input
        type="number"
        id="{{calculatorType}}-stopLoss"
        step="0.01"
        placeholder="2.10"
        required
      />
    </div>
  {{/match}}

  <div class="cal-input-container">
    <label
      class="cal-input-label"
      for="{{calculatorType}}-accountBalance"
    >Account Balance ($)
      <span class="cal-required">*</span>
      <span class="cal-tooltip">&#9432;
        <span class="cal-tooltiptext">Indicate the amount of the current
          valuation of your capital.</span>
      </span></label>
    <input
      type="number"
      id="{{calculatorType}}-accountBalance"
      step="0.01"
      placeholder="1000.00"
      required
    />
  </div>
  <div class="cal-input-container">
    <label class="cal-input-label" for="{{calculatorType}}-risk">Risk (%)
      <span class="cal-required">*</span>
      <span class="cal-tooltip">&#9432;
        <span class="cal-tooltiptext">This is the amount of risk you want to
          take on this trade, as a percentage, relative to your capital.</span>
      </span></label>
    <input
      type="number"
      id="{{calculatorType}}-risk"
      step="any"
      placeholder="2"
      required
    />
  </div>
  <div class="cal-input-container">
    <label
      class="cal-input-label"
      for="{{calculatorType}}-profitLossRatio"
    >Profit/Loss Ratio
      <span class="cal-required">*</span>
      <span class="cal-tooltip">&#9432;
        <span class="cal-tooltiptext">Multiple of your risk that you want to use
          as a target. (ie. 3 means 3:1)</span>
      </span></label>
    <input
      type="number"
      id="{{calculatorType}}-profitLossRatio"
      step="any"
      placeholder="3"
      required
    />
  </div>
  <div class="cal-button-container">
    <button class="cal-calculate-button" type="submit">
      <span>
        Calculate
      </span>
    </button>
    <button class="cal-reset-button" type="reset">
      <span>
        Reset
      </span>
    </button>
  </div>
</form>
