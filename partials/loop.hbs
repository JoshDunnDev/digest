<article class="gh-card {{post_class}}">
  <a href="{{url}}">
    <section class="gh-card-link-main">
      <header class="gh-card-header">
        <h2 class="gh-card-title">{{title}}</h2>
      </header>

      <div class="gh-card-excerpt">{{excerpt}}</div>

      <div class="gh-article-meta gh-meta-expansion">
        <time
          class="gh-article-date"
          datetime="{{date format="YYYY-MM-DD"}}"
        >{{date}}</time>
        {{#if authors}}
          <div class="gh-text-separator">|</div>
          <div class="gh-authors">
            {{authors separator=", "}}
          </div>
        {{/if}}
      </div>
      {{#if tags}}
        <div class="gh-tags">
          {{tags separator=", "}}
        </div>
      {{/if}}
    </section>

  </a>
</article>
