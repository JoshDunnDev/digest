{{!< default}}

<main class="main">
    <section class="p-outer">
        <div class="p-inner p-hero">
            <div class="p-hero-text-container">
                <h1>The Small Account Day Trader's Journey</h1>
                <p>Follow my day trading journey with a small account. Discover strategies, daily recaps, tools, and insights as I aim for financial freedom. Let's trade tiny and dream big!</p>
            </div>
            <div class="p-hero-buttons">
                <button data-portal="signup">Subscribe</button>
            </div>
        </div>
    </section>
    {{#foreach posts limit="1"}}
        <article class="gh-article {{post_class}}">
            {{> content}}
        </article>
    {{/foreach}}
</main>

